<h1>Tasks#index</h1>

<%= form_tag [:search, :tasks], :method => :get, :style => "text-align: right" do %>
  <%= text_field_tag "query", params[:query] %> <%= submit_tag "Search" %>
<% end %>

<%= render "categories" if Category.all.present? %>

<%= render "navi" %>

<table class="tasks">
  <col class="name" />
  <col class="due_date" />
  <% @tasks.each do |task| %>
  <tr>
    <td> <%= link_to task.name, task %> </td>
    <td> <%= task.due_date %> </td>
    <td> <%= links_for(task) %> </td>
  </tr>
  <% end %>
</table>

<%= will_paginate(@tasks) %>
<%= link_to "new task", [:new, :task] %>